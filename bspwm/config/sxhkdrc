#Keybindings

# Terminal
super + Return
	alacritty

# transpanrecy
ctrl + alt + {plus,minus,t}
	{picom-trans -c -o +3, picom-trans -c -o -1, picom-trans -c -d}

# Launcher
super + @space
	rofi -show drun -theme ~/.config/bspwm/config/rofi/theme.rasi

# Power menu
super + shift + e
    ~/.config/bspwm/bin/powermenu

# Quit/Restart BSPWM
super + alt + {q,r}
	bspc {quit,wm -r}

# Restart sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# Close (all) window(s)
super + {_,shift + }q
	bspc node -{c,k}

# Maximize window
super + m
	bspc desktop -l next

super + y
	bspc node newest.marked.local -n newest.!automatic.local

super + g
	bspc node -s biggest.window

# Change layout
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Rotate
super + r
  bspc node @/ --rotate {90,-90}

# Equalize
super + equal
  bspc node @/ --equalize

super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Move window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Previous/Next workspace
super + bracket{left,right}
	bspc desktop -f {next,prev}.local

# Change workspace/Move window to workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Preselect
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel preselect
super + ctrl + space
	bspc node -p cancel
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Resize window
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + {Left,Down,Up,Right}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20, right 20 0}
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Focus workspace
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Screenshot
Print
  maim --format=png /dev/stdout | xclip -selection clipboard -t image/png -i
ctrl + Print
  flameshot gui
alt + Print
  scrot --delay 5 /tmp/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved to /tmp/$(date +"%Y-%m-%d-%T")-screenshot.png"

# Colorscheme changer
alt + space
  ~/.config/bspwm/bin/colorchanger

# Volume
super + ctrl + {minus,equal,0}
  ~/.config/bspwm/bin/volume {--down,--up,--toggle}
{XF86AudioLowerVolume,XF86AudioRaiseVolume,XF86AudioMute}
	~/.config/bspwm/bin/volume {--down,--up,--toggle}

# Brightness
super + ctrl + bracket{left,right}
  ~/.config/bspwm/bin/brightness {--down,--up}
{XF86MonBrightnessDown,XF86MonBrightnessUp}
    ~/.config/bspwm/bin/brightness {--down,--up}

# Lock screen
super + BackSpace
    ~/.config/bspwm/bin/blur-lock

# Toggle Polybar
super + shift + b
    ~/.config/bspwm/bin/toggle-bar
